{
    "manifest_version": 2,
  
    "name": "WhatsApp Skin",
    "version": "0.1.1",
    "description": "A WhatsApp Skin",
  
    "content_scripts": [{
      "css": ["./dist/css/all.min.css"],
      "js": ["./dist/js/vendors.min.js", "./dist/js/all.min.js"],
      "matches": ["https://web.whatsapp.com/"]
    }],
  
    "permissions": [
          "storage"
      ],
  
      "icons" : {
        "16" : "theme.png",
        "48" : "theme.png",
        "128" : "theme.png"
      }
  
  }
  